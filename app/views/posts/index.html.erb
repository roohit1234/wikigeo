<% if user_signed_in? %>
  
<% else %>
  <%= render("layouts/jumbotron") %>
<% end %>

<div class="container">
<div class="row">
	
	<% @posts.each do |post| %>

		<div class="col-md-7 posts-main">
			<p class="postedby-main"><%= link_to " #{post.user.name}", post.user, class: "lead" %></p>
			<div class="thumb"><%= link_to (image_tag post.image.url(:medium)), post %></div>
			<h4><%= link_to post.title, post, class: "lead-title" %></h4>
			<p class="lead-para"><%= h truncate(post.description, length: 110) %><br><%= link_to "Read more...", post, class: "lead-read" %> </p>

		</div>

	<% end %>
	
</div>
</div>