<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 signupbg">


	<%= form_for @post do |f| %>

		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class:"form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, rows: 6, class:"form-control" %>
		</div>
			
		<%= f.submit class: "btn" %>

	<% end %>


   </div>  
    <div class="col-md-4"></div>
</div>